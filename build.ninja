builddir = out

cc   = clang
warn = -Weverything $
    -Wno-declaration-after-statement $
    -Wno-poison-system-directories $
    -Wno-switch-default $
    -Wno-unsafe-buffer-usage

dev = -Og
lto = $dev -flto -fuse-ld=lld -Qunused-arguments
san = -fsanitize=address,integer,undefined

subninja build/dev
subninja build/lto
subninja build/san
